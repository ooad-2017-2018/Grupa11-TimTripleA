        <TextBox x:Name="textBox_Copy5" Grid.Column="1" HorizontalAlignment="Left" Margin="316,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.451,0.438" Width="213"/>
        <TextBlock x:Name="textBlock1_Copy1" Grid.Column="1" HorizontalAlignment="Left" Margin="117,369,0,0" TextWrapping="Wrap" Text="Lista radnika" VerticalAlignment="Top" FontSize="36" FontWeight="{ThemeResource Bold}"/>
        <ListView x:Name="listView" Grid.Column="1" HorizontalAlignment="Left" Height="234" Margin="117,454,0,0" VerticalAlignment="Top" Width="524"/>
    </Grid>
</Page>
