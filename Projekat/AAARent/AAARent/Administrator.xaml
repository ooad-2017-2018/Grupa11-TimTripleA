        <DatePicker HorizontalAlignment="Left" Grid.Column="0" Margin="308,408,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy2" Grid.Column="0" HorizontalAlignment="Left" Margin="308,355,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.451,0.438" Width="213"/>
