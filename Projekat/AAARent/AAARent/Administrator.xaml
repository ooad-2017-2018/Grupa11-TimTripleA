        <TextBox x:Name="textBox" Grid.Column="1" HorizontalAlignment="Left" Margin="316,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.451,0.438" Width="213"/>
